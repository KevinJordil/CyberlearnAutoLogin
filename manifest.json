{
    "name": "Cyberlearn Auto-login",
    "manifest_version": 3,
    "version": "1",
    "description": "Cyberlearn with SWITCH edu-ID autologin",
    "icons": {
        "128": "icon/icon128.png"
    },
    "action": {
        "default_icon"  :   "icon/icon128.png",
        "default_popup" :   "html/popup.html",
        "default_title" :   "Cyberlearn Auto-login"
    },
    "content_scripts": [
        {
            "matches": [
                "https://cyberlearn.hes-so.ch/*"
            ],
            "exclude_matches": [
                "https://cyberlearn.hes-so.ch/login/index.php"
            ],
            "js": [
                "js/cyberloginaccess.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://cyberlearn.hes-so.ch/login/index.php"
            ],
            "js": [
                "js/cyberlogin.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://hes-so.login.eduid.ch/idp/profile/SAML2/Redirect/SSO*"
            ],
            "js": [
                "js/hessologin.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://cyberlearn.hes-so.ch/*",
        "https://hes-so.login.eduid.ch/*"
    ]
}