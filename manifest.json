{
    "name":"Autologin",
    "manifest_version": 3,
    "version":"1",
    "description":"Cyberlearn with AAI autologin",
    "content_scripts": [
        {
            "matches": ["https://cyberlearn.hes-so.ch/*"],
            "exclude_matches": ["https://cyberlearn.hes-so.ch/login/index.php"],
            "js": ["cyberloginaccess.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["https://cyberlearn.hes-so.ch/login/index.php"],
            "js": ["cyberlogin.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["https://hes-so.login.eduid.ch/idp/profile/SAML2/Redirect/SSO*"],
            "js": ["hessologin.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "https://cyberlearn.hes-so.ch/*",
        "https://hes-so.login.eduid.ch/*"
    ]
}